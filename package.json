{
  "name": "sqlite-mcp-gui",
  "version": "1.0.0",
  "description": "Simple SQLite MCP GUI - MCP server (stdio) and basic web UI",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "npm run build:mcp && npm run build:ui",
    "build:mcp": "npx esbuild src/server/index.ts --bundle --platform=node --format=esm --external:better-sqlite3 --outfile=dist/server/index.js",
    "build:ui": "npx esbuild src/ui/index.ts --bundle --platform=node --format=esm --external:better-sqlite3 --external:express --outfile=dist/ui/index.js",
    "start:mcp": "node dist/server/index.js",
    "start:ui": "node dist/ui/index.js"
  },
  "keywords": [
    "sqlite",
    "mcp",
    "gui",
    "database"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.7.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
