# SQLite MCP GUI - Environment Configuration
# Copy this file to .env and adjust values as needed

# ============================================================================
# AUTHENTICATION SETTINGS
# ============================================================================

# Enable/disable authentication
# Set to 'true' to enable authentication, 'false' or leave unset to disable
# Default: false (disabled)
AUTH_ENABLED=false

# ============================================================================
# JWT TOKEN SETTINGS
# ============================================================================

# Secret key for JWT token signing
# IMPORTANT: Change this to a strong random string in production!
# Default: change-this-secret-in-production
JWT_SECRET=your-super-secret-jwt-key-change-this

# JWT token expiration time
# Format: Xh (hours), Xm (minutes), Xd (days)
# Default: 24h
JWT_EXPIRES_IN=24h

# ============================================================================
# SESSION SETTINGS
# ============================================================================

# Secret key for session cookie signing
# IMPORTANT: Change this to a strong random string in production!
# Default: change-this-session-secret-in-production
SESSION_SECRET=your-super-secret-session-key-change-this

# Session max age in milliseconds
# Default: 86400000 (24 hours)
SESSION_MAX_AGE=86400000

# ============================================================================
# API KEY SETTINGS
# ============================================================================

# Enable API key authentication
# Default: true (if auth is enabled)
API_KEYS_ENABLED=true

# Header name for API key
# Default: X-API-Key
API_KEY_HEADER=X-API-Key

# Comma-separated list of valid API keys
# Example: key1,key2,key3
# Default: empty
DEFAULT_API_KEYS=

# ============================================================================
# BASIC AUTH SETTINGS
# ============================================================================

# Enable HTTP Basic Authentication
# Default: false
BASIC_AUTH_ENABLED=false

# ============================================================================
# USER STORAGE SETTINGS
# ============================================================================

# User storage type: 'memory' or 'file'
# - memory: Users stored in memory only (lost on restart)
# - file: Users persisted to file
# Default: memory
# USERS_STORAGE_TYPE=memory

# Path to user storage file (required if using file storage)
# Default: empty
# USERS_FILE_PATH=./users.json

# ============================================================================
# PASSWORD POLICY SETTINGS
# ============================================================================

# Minimum password length
# Default: 8
PASSWORD_MIN_LENGTH=8

# Require uppercase letters in password
# Default: true
PASSWORD_REQUIRE_UPPERCASE=true

# Require lowercase letters in password
# Default: true
PASSWORD_REQUIRE_LOWERCASE=true

# Require numbers in password
# Default: true
PASSWORD_REQUIRE_NUMBERS=true

# Require special characters in password
# Default: false
PASSWORD_REQUIRE_SPECIAL=false

# ============================================================================
# SERVER SETTINGS
# ============================================================================

# Server port
# Default: 3000
PORT=3000

# Node environment
# Default: development
NODE_ENV=development
