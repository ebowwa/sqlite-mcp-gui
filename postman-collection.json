  "item": [
    {
      "name": "Database Operations",
      "item": [
        {
          "name": "Execute Query",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dbPath\": \"/path/to/database.db\",\n  \"sql\": \"SELECT * FROM users LIMIT 10\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/query",
              "host": ["{{baseUrl}}"],
              "path": ["api", "query"]
            },
            "description": "Execute SQL queries against a SQLite database. Supports SELECT, PRAGMA, INSERT, UPDATE, DELETE, and other SQL operations."
          },
          "response": [
            {
              "name": "SELECT Query Success",
              "originalRequest": {
                "method": "POST",
                "header": [],
                "body": {
                  "mode": "raw",
