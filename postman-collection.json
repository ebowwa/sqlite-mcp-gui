    {
      "name": "Example Workflows",
      "item": [
        {
          "name": "1. Create Test Database",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dbPath\": \"/tmp/test.db\",\n  \"sql\": \"CREATE TABLE IF NOT EXISTS users (id INTEGER PRIMARY KEY, name TEXT, email TEXT, active INTEGER DEFAULT 1)\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/query",
              "host": ["{{baseUrl}}"],
              "path": ["api", "query"]
            },
            "description": "Step 1: Create a test database with a users table"
          }
        },
        {
          "name": "2. Insert Sample Data",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dbPath\": \"/tmp/test.db\",\n  \"sql\": \"INSERT INTO users (name, email) VALUES ('John Doe', 'john@example.com'), ('Jane Smith', 'jane@example.com'), ('Bob Wilson', 'bob@example.com')\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/query",
              "host": ["{{baseUrl}}"],
              "path": ["api", "query"]
            },
            "description": "Step 2: Insert sample data into the users table"
          }
        },
        {
          "name": "3. Query All Users",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dbPath\": \"/tmp/test.db\",\n  \"sql\": \"SELECT * FROM users\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/query",
              "host": ["{{baseUrl}}"],
              "path": ["api", "query"]
            },
            "description": "Step 3: Query all users from the database"
          }
        },
        {
          "name": "4. Get Table Schema",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dbPath\": \"/tmp/test.db\",\n  \"tableName\": \"users\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/schema",
              "host": ["{{baseUrl}}"],
              "path": ["api", "schema"]
            },
            "description": "Step 4: Get the schema of the users table"
          }
        },
        {
          "name": "5. Count Active Users",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dbPath\": \"/tmp/test.db\",\n  \"sql\": \"SELECT COUNT(*) as active_users FROM users WHERE active = 1\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/query",
              "host": ["{{baseUrl}}"],
              "path": ["api", "query"]
            },
            "description": "Step 5: Count active users with aggregation"
          }
        }
